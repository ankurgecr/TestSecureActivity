<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyPadLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            style="@style/NumericPadKey"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/NumericPadKey"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/NumericPadKey"
            android:text="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            style="@style/NumericPadKey"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/NumericPadKey"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/NumericPadKey"
            android:text="6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            style="@style/NumericPadKey"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/NumericPadKey"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/NumericPadKey"
            android:text="9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fingerPrintImageView"
            style="@style/NumericPadImage"
            android:padding="@dimen/gap_external"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_vc_fingerprint_thumb_biometrix"
            android:visibility="invisible"
            app:tint="@color/purple_500"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button0"
            style="@style/NumericPadKey"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="0" />

        <ImageView
            android:id="@+id/buttonDelete"
            style="@style/NumericPadImage"
            android:scaleType="centerInside"
            android:src="@drawable/ic_vc_back_delete_erase"
            app:tint="@color/purple_500" />

    </LinearLayout>

</LinearLayout>